         </div>

         <div class="info">
           <div class="icon">
             <i class="fas fa-users"></i>
           </div>
           <div><%= @van.seats %></div>
         </div>

         <div class="info">
           <div class="icon">
             <i class="far fa-user"></i>
           </div>
           <div><%= @van.user.first_name.upcase %></div>
