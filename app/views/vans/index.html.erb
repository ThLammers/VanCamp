<h1>We found these vans for you:</h1>

<table>
  <tr>
    <th>id</th>
    <th>title</th>
    <th>description</th>
    <th>location</th>
    <th>brand</th>
    <th>category</th>
    <th>seats</th>
    <th>user_id (owner)</th>
    <th>created_at</th>
    <th>updated_at</th>
    <th>price_per_day</th>
    <th colspan="3">admin</th>
  </tr>
  <% @vans.each do |van| %>
    <tr>
      <td><%= van.id %></td>
      <td><%= van.title %></td>
      <td><%= van.description %></td>
      <td><%= van.location %></td>
      <td><%= van.brand %></td>
      <td><%= van.category %></td>
      <td><%= van.seats %></td>
      <td><%= van.user.first_name %></td>
      <td><%= van.created_at %></td>
      <td><%= van.updated_at %></td>
      <td><%= van.price_per_day %></td>
      <td><%= link_to ('<i class="fas fa-eye"></i>').html_safe, van_path(van) %></td>
      <td><%= link_to ('<i class="fas fa-pencil-alt"></i>').html_safe, edit_van_path(van) %></td>
      <td><%= link_to ('<i class="fas fa-trash-alt"></i>').html_safe, van_path(van), method: :delete %></td>
    </tr>
  <% end %>


</table>

<p>--------------------------</p>
