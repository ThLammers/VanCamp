<div class="main-container">

  <div
    id="map"
    style="width: 100%;
    height: 250px;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
  ></div>

  <table class="cards" style="visibility:collapse;">
    <tr>
      <th>id</th>
      <th>title</th>
      <th>description</th>
      <th>location</th>
      <th>brand</th>
      <th>category</th>
      <th>seats</th>
      <th>user_id (owner)</th>
      <th>created_at</th>
      <th>updated_at</th>
      <th>price_per_day</th>
      <th colspan="3">admin</th>
    </tr>

    <% @vans.each do |van| %>
      <tr>
        <td><%= van.id %></td>
        <td><%= van.title %></td>
        <td><%= van.description %></td>
        <td><%= van.location %></td>
        <td><%= van.brand %></td>
        <td><%= van.category %></td>
        <td><%= van.seats %></td>
        <td><%= van.user.first_name %></td>
        <td><%= van.created_at %></td>
        <td><%= van.updated_at %></td>
        <td><%= van.price_per_day %></td>
        <td><%= link_to ('<i class="fas fa-eye"></i>').html_safe, van_path(van) %></td>
        <td><%= link_to ('<i class="fas fa-pencil-alt"></i>').html_safe, edit_van_path(van) %></td>
        <td><%= link_to ('<i class="fas fa-trash-alt"></i>').html_safe, van_path(van), method: :delete %></td>
      </tr>
    <% end %>
  </table>
  <div class="van-card-container">
      <% @vans.each do |van| %>
    <div class="van-card">
        <h3 class=title-in-card><%= van.title %></h3>
        <%= cl_image_tag(van.photo, width: 200, height: 150, crop: :fill) %>
        <p>Seats: <%= van.seats %></p>
        <p>Price: <%= van.price_per_day %> â‚¬/day</p>
        <%= link_to "More info", van_path(van)  %>

        <!-- User can update a van if they created it -->
        <% if policy(van).edit? %>
          <%= link_to "Edit", edit_van_path(van) %>
        <% end %>

        <!-- User can delete van if they created it -->
        <% if policy(van).destroy? %>
          <%= link_to "ðŸ—‘", van_path(van), method: :delete %>
        <% end %>
    </div>
      <% end %>

  </div>
</div>


