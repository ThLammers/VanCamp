<div>
  <div id="review-user">
    <h6 id="review-user-icon"><i class="fas fa-user"></i></h6>

    <div id="review-user-info">
      <% if review.user.present? %>
        <strong><%= review.user.first_name.capitalize %></strong>
      <% else %>
        <strong>Unknown van lover</strong>
      <% end %>
      <p id="review-date">
        <%= review.created_at.strftime("%B #{review.created_at.day.ordinalize}, %Y")%>
      </p>
    </div>
  </div>

  <div>"<%= review.content %>"</div>

</div>
